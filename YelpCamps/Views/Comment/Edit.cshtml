@model YelpCamp.ViewModels.CommentFormVm
@{
    ViewBag.Title = "Create";
}

<h1 class="text-center">Edit Comment For @Model.CampName</h1>

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <form method="post">
            <div class="form-group">
                @Html.LabelFor(vm => vm.Text)
                @Html.TextBoxFor(vm => vm.Text, new { @class = "form-control", placeholder = "Text" })
            </div>

            @Html.HiddenFor(vm => vm.CampId)
            @Html.HiddenFor(vm => vm.CommentId)
            <input type="submit" value="Update" class="btn btn-block btn-primary" />

            <a class="btn btn-block btn-default" href="@Url.Action("Detail","Campground" , new { id = Model.CampId })">
                Back
            </a>
        </form>
    </div>
</div>